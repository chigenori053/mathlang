[
  {
    "id": "ARITH-ADD-001",
    "category": "arithmetic.addition",
    "title": "Commutativity of addition",
    "pattern": {
      "before": "a + b",
      "after": "b + a"
    },
    "explanation": "足し算は順序を入れ替えても結果が変わらない。"
  },
  {
    "id": "ARITH-ADD-002",
    "category": "arithmetic.addition",
    "title": "Associativity of addition",
    "pattern": {
      "before": "a + (b + c)",
      "after": "(a + b) + c"
    },
    "explanation": "グルーピングを変えても合計は同じ。"
  },
  {
    "id": "ARITH-ADD-003",
    "category": "arithmetic.addition",
    "title": "Zero is the additive identity",
    "pattern": {
      "before": "a + 0",
      "after": "a"
    },
    "explanation": "0を足しても値は変わらない。"
  }
]
